{
  "name": "@stylospectrum/ui",
  "version": "0.0.4",
  "description": "",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "storybook": "npm run gen-docs && storybook dev -p $(grep PORT .env | cut -d '=' -f2)",
    "build-package": "rm -rf dist && tsc -p tsconfig.package.json && sass-to-string",
    "build-storybook": "storybook build",
    "lint:lit-analyzer": "lit-analyzer --strict --rules.no-invalid-directive-binding warn",
    "lint": "npm run lint:lit-analyzer && npm run tsc && npm run lint:script && npm run lint:style",
    "lint-fix": "npm run lint-fix:script && npm run lint-fix:style",
    "lint-fix:script": "npm run lint:script -- --fix",
    "lint-fix:style": "npm run lint:style -- --fix",
    "lint:script": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:style": "stylelint 'src/**/*.scss'",
    "tsc": "tsc -p tsconfig.package.json --noEmit",
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
    "prepare": "husky install",
    "gen-docs": "custom-elements-manifest analyze --litelement --exclude \"(src/**/(React|stories).ts|src/icon/data/*|src/index.ts|scripts/*)\" --outdir=.storybook"
  },
  "lint-staged": {
    "*.scss": "stylelint --fix",
    "*": "prettier -c --write",
    "*.{.js,.jsx,.ts,.tsx}": "eslint --fix --ext .js,.jsx,.ts,.tsx"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.23.3",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@custom-elements-manifest/analyzer": "^0.9.0",
    "@lit/react": "^1.0.0",
    "@storybook/addon-essentials": "^7.5.3",
    "@storybook/addon-links": "^7.5.3",
    "@storybook/blocks": "^7.5.3",
    "@storybook/web-components": "^7.5.3",
    "@storybook/web-components-webpack5": "^7.5.3",
    "@types/vfile-message": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.51.0",
    "eslint-plugin-storybook": "^0.6.15",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "lit": "^3.0.0",
    "lit-analyzer": "^1.2.1",
    "node-sass": "^9.0.0",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.5.0",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "sass-to-string": "^1.6.3",
    "storybook": "^7.5.3",
    "stylelint": "^15.10.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-prettier": "^4.0.0",
    "ts-lit-plugin": "^2.0.1",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2"
  }
}
